# Postgres
POSTGRES_USER=recipe
POSTGRES_PASSWORD=change-me-to-something-secure
POSTGRES_DB=recipedb

# JWT — generate with: openssl rand -hex 32
JWT_SECRET=change-me-to-a-long-random-string

# Google OAuth (optional — leave blank to use only password auth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Parser backend: "local" (free, uses Tesseract) or "ai" (requires OpenAI key)
PARSER_BACKEND=local
OPENAI_API_KEY=

# Port to expose the web UI on
PORT=80
